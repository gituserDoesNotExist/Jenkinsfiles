pipeline {
	agent any
	
	stages {
		stage('checkout') {
			steps {
				git url: 'https://github.com/gituserDoesNotExist/game-portal.git'
			}
		}
		stage('test stage') {
			steps {
				sh '''echo "hello world"
					pwd
					root=$(pwd)
					target=$root/"WebContent"
					cd ..
					source=$root/"Angular/public/"

					cd $target
					find . -maxdepth 1 -not -name "META-INF" -not -name "WEB-INF" -name "*"

					cd $source
				'''
			}
		}
	}
}
